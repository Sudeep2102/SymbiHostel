<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen"
    android:background="@color/yellowish">

    <ImageView
        android:id="@+id/sit_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_hos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sit_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="57dp"
        android:fontFamily="sans-serif"
        android:text="Welcome...\n\'Welcome to our Symbi Hostel , \nwhere adventure, comfort, and community come together.\'"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/sh_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1"
        android:layout_below="@+id/text_hos"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>